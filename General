CREATE TABLE LLM_Logs (
    log_id UNIQUEIDENTIFIER PRIMARY KEY DEFAULT NEWID(),
    session_id NVARCHAR(100) NULL,
    username NVARCHAR(255) NULL,
    processing_time FLOAT NOT NULL,
    prompt_type NVARCHAR(50) NOT NULL,
    num_tokens_input INT NOT NULL,
    num_tokens_response INT NOT NULL,
    success_status BIT NOT NULL,
    user_feedback_flag BIT NOT NULL,  -- 1 for Yes, 0 for No
    user_feedback NVARCHAR(MAX) NULL,  -- Only populated if user_feedback_flag = 0
    model_version NVARCHAR(50) NOT NULL,
    request_size INT NULL,
    response_size INT NULL,
    server_latency FLOAT NULL,
    network_latency FLOAT NULL,
    error_message NVARCHAR(MAX) NULL
);

